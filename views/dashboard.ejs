<%- include('./layout/header'); -%>

    <%- include('./layout/partials/navbar'); -%>

        <h1>Dashboard</h1>
        <p>Welcome <strong><%= userName %></strong> </p>
        <div class="row">

        </div>

        <div class="row">
            <div class="col-md-6" id="admin_div">
                <div class="table-responsive-sm">
                    <% if(admin.length){ %>
                        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="th-sm">Name

                                    </th>
                                    <th class="th-sm">Address

                                    </th>

                                </tr>
                                <% } %>

                            </thead>
                            <tbody>
                                <% for (var i = 0; i < admin.length; i++) { %>

                                    <tr>
                                        <td>
                                            <%= admin[i].email %>
                                        </td>
                                        <td>
                                            <%= admin[i].walletName %>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6" id="admin_div">
                <div class="table-responsive-sm">
                    <% if(walletList.length){ %>
                        <h2> RDD Wallet List</h2>
                        <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th class="th-sm">walletName
                                    </th>
                                    <th class="th-sm">Address
                                    </th>
                                    <th class="th-sm">action
                                    </th>

                                </tr>
                                <% } %>

                            </thead>
                            <tbody>
                                <% for (var i = 0; i < walletList.length; i++) { %>

                                    <tr>
                                        <td>
                                            <%= walletList[i].walletName %>
                                        </td>
                                        <td>
                                            <%= walletList[i].address %>
                                        </td>
                                        <td>
                                            <input type="hidden" name="rddWalletId" value="<%=walletList[i].id%>" />
                                            <button class="btn btn-primary" type="button">Update</button>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
        <script type="text/JavaScript" src="/js/dialog.js">