<%- include('./layout/header'); -%>
    <div class="container">
        <div class="brand">
            <h1 class="margin-bottom-min text">Airdrop Xels Site</h1>
            <h3 class="detail-text">Simple &nbsp;.&nbsp; Secure &nbsp;.&nbsp; Transparent</h3>
        </div>
        <div class="content-wrapper">

            <div class="row">

                <div class="col-md-8">
                    <div class="login-form">
                        <h1>Login Form</h1>
                        <% if (message.length > 0) { %>
                            <div class="msg_alert" style="color:red;text-align:center;font-size:18px;margin-left: 50%;">
                                <%= message %>
                            </div>
                            <% } %>
                                <form class="log-in-form ng-pristine ng-valid" action="/login" method="POST">

                                    <div class="form-group">
                                        <input type="email" id="inputEmail" placeholder="Your Email" class="form-control" name="email" value="" required autofocus>
                                        <!-- <div *ngIf="loginFormErrors.email" class="invalid-feedback">{{ loginFormErrors.email }}</div> -->
                                    </div>
                                    <div class="form-group">
                                        <input type="password" id="inputPassword" placeholder="Your Password" name="password" class="form-control" value="" required>
                                    </div>
                                    <!-- <p class="errorMsg" *ngIf="errorMessage">{{erM}}</p> -->
                                    <button class="btn btn-lg btn-default btn-block" type="submit">Sign in</button>
                                </form>
                    </div>
                    <div class="account-extras">
                        <p>
                            <a href="/register">Don't have an account?</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- The core Firebase JS SDK is always required and must be listed first -->
    <script src="https://www.gstatic.com/firebasejs/6.2.2/firebase-app.js"></script>
    <script src="../config/firebaseConfig.js"></script>
    < <%- include( './layout/footer'); -%>