<%- include('./layout/header'); -%>
    <div class="register-section text-md-left text-center">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="logo">
                        <img src="img/xels-logo.svg" alt="xels-logo">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 col-lg-5 my-auto">
                    <div class="login-form">
                        <div class="section-title">Si<span>gn </span>in</div>
                        <% if (message.length > 0) { %>
                            <div class="msg_alert" style="color:red;text-align:center;font-size:18px;margin-left: 50%;">
                                <%= message %>
                            </div>
                            <% } %>
                                <form class="log-in-form ng-pristine ng-valid form-theme" action="/login" method="POST">
                                    <div class="form-group">
                                        <fieldset>
                                            <input type="email" id="inputEmail" placeholder="Email" class="form-control" name="email" value="" required autofocus>
                                            <!-- <div *ngIf="loginFormErrors.email" class="invalid-feedback">{{ loginFormErrors.email }}</div> -->
                                            <legend>Email</legend>
                                        </fieldset>
                                    </div>
                                    <div class="form-group">
                                        <fieldset>
                                            <input type="password" id="inputPassword" placeholder="Password" name="password" class="form-control" value="" required>
                                            <legend>Password</legend>
                                        </fieldset>
                                    </div>
                                    <!-- <p class="errorMsg" *ngIf="errorMessage">{{erM}}</p> -->
                                    <div class="text-center">
                                        <a class="mb-4" href="/forgot">Forgot password?</a>
                                        <div class="clearfix"></div>
                                        <!-- <label class="checkbox float-left">
                                        <input type="checkbox" value="remember-me">
                                        Remember me
                                        </label> -->
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col text-center mb-md-5 mb-2">
                                        <button class="btn btn-theme" type="submit">Sign in</button>
                                    </div>
                                </form>
                                <div class="footer-menu d-md-block d-none">
                                    <div class="row">
                                        <div class="col text-md-right mb-2">
                                            <a href="#">Privacy Policy</a>
                                        </div>
                                        <div class="col d-md-block d-none" style="max-width: 6px;">
                                            <span class="dot">
                                    <svg class="img" width="6" height="6" viewBox="0 0 6 6" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <circle cx="3" cy="3" r="3" fill="#C4C4C4"/>
                                    </svg>
                                </span>
                                        </div>
                                        <div class="col mb-2">
                                            <a href="#">Terms & Conditions</a>
                                        </div>
                                    </div>
                                </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1 col-lg-4 offset-lg-3 my-auto text-center register-info d-md-block d-none">
                    <div class="section-title color-white">Hello<span>, Fr</span>iend!</div>
                    <div class="text-contents color-white mb-2 mb-md-5">Fill up personal information and start your journey.</div>
                    <a class="btn-theme color-white" href="/register">Sign Up</a>
                </div>
            </div>
        </div>
    </div>
    <div class="register-section register-info-device d-md-none d-block">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-5 offset-md-1 col-lg-4 offset-lg-3 my-auto text-center mb-2">
                    <div class="section-title color-white">Hello<span>, Fr</span>iend!</div>
                    <div class="text-contents color-white mb-4 mb-md-5">Fill up personal information and start your journey.</div>
                    <div><a class="btn-theme color-white" href="/register">Sign Up</a></div>
                </div>
            </div>
            <div class="footer-menu text-center">
                <div class="row">
                    <div class="col text-md-right mb-2">
                        <a href="#" class="color-white">Privacy Policy</a>
                    </div>
                    <div class="col mb-2">
                        <a href="#" class="color-white">Terms & Conditions</a>
                    </div>
                </div>
            </div>
        </div>
    </div>